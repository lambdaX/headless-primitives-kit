{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "moduleSuffixes": [".js"],
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/components/headless-logic/**/*.ts",
    "./src/hooks/use-headless-component.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app",
    "src/components/playground",
    "src/components/ui",
    "src/lib",
    "src/ai",
    "**/*.spec.ts",
    "**/*.test.ts",
    "public/esm-button-example.html"
  ]
}