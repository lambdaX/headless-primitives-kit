
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src", 
    "baseUrl": ".", 
    "module": "ESNext", 
    "moduleResolution": "Bundler", 
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false, 
    "jsx": "react-jsx",
    "emitDeclarationOnly": false, 
    "isolatedModules": false
  },
  "include": [
    "./src/components/headless-logic/**/*.ts",
    "./src/hooks/use-headless-component.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app",
    "src/components/playground",
    "src/components/ui",
    "src/lib",
    "src/ai",
    "**/*.spec.ts",
    "**/*.test.ts",
    "public/esm-button-example.html",
    "tests"
  ]
}

