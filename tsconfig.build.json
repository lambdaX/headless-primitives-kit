
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/components/headless-logic",
    "baseUrl": "./src/components/headless-logic",
    "paths": { 
      "@/*": ["../../../*"] 
    },
    "module": "ESNext", 
    "declaration": true, 
    "declarationMap": true, 
    "sourceMap": true, 
    "noEmit": false, 
    "jsx": "react-jsx", 
    "emitDeclarationOnly": false, 
    "isolatedModules": false 
  },
  "include": [
    "./src/components/headless-logic/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app",
    "src/components/playground",
    "src/components/ui",
    "src/hooks",
    "src/lib",
    "src/ai",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
